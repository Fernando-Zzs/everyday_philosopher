.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}
 
.item:last-child {
  margin-bottom: 50rpx;
}
 
.tab {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  color: aliceblue;
  font-size: 28rpx;
}
 
.tab-active {
  color: #fff;
  border-bottom: 7rpx solid #fff;
}
 
.tab > view {
  flex: 1;
  text-align: center;
}
 
swiper {
  position: fixed;
  top: 60rpx;
  left: 0;
  bottom: 0;
  width: 100%;
}
 
.backTop {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
  background: rgba(255, 255, 255, 0.5);
  z-index: 30;
  border-radius: 50%;
}