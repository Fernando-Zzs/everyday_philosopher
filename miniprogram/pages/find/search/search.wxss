/* pages/search/search.wxss */
.container{
  display: flex;
  flex-direction:column;
  align-items: center;
}
.bg {
  position: fixed;
  height: 100vh;
  width: 100%;
  z-index: -1;
}
.back{
  position: fixed;
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-top: 110rpx;
}
.search-bar{
  backdrop-filter:blur(15px);
  background: rgba(255, 255, 255, 0.616);
  position: relative;
  width: 80vw;
  height: 80rpx;
  border: 4rpx black solid;
  border-radius: 40rpx;
  margin-top: 200rpx;
  margin-bottom: 20rpx;
}

.search-icon{
  flex-shrink: 0;
  position: absolute;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-left: 15rpx;
  line-height: 80rpx;
  text-align: center;
}
.input{
  margin-left: 80rpx;
  line-height: 80rpx;
  height: 100%;
  padding-left: 25rpx;
}
.serach-item{
  backdrop-filter:blur(15px);
  background: rgba(255, 255, 255, 0.616);
  margin: 6rpx;
  width: 80%;
  border: 4rpx #333 solid;
  border-radius: 20rpx;
}

.serach-item-head{
  border-bottom: 2rpx solid #333 ;
  display: flex;
  align-items: center;
}
.serach-item-icon{
  flex-shrink: 0;
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  /* border: 4rpx #333 solid;
  border-radius: 50%; */
  margin-left: 10px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.serach-item-title{
  display: inline-block;
  line-height: 50rpx;
  padding-left: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.serach-item-content{
  text-indent: 2rem;
  padding: 20px;
}