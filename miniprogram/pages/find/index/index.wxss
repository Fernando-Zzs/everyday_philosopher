.page{
  background-color: black;
}
.page-section-spacing{
  margin-top: 0rpx;
}
.page-body{
  position: relative;
}
.swiper{
  width: 100vw;
  height: 100vh;
}
.scroll-view_H{
  white-space: nowrap;
  position: relative;
  width: 100vw;
  /* height:100%; */
}
.search-btn{
  z-index: 999;
  margin-left: 35rpx;
  /* margin-top: 20rpx; */
  position:fixed;
  width: 80rpx;
  height: 80rpx;
}
.scroll-view-item_H{
  display: inline-block;
  height: 100vh;
}
.circle
{
  align-items: center;
  display: inline-block;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  text-align: center;
  line-height: 100px;
}

.bg{
  position: absolute;
  width:200%;
  height:100vh;
  animation: sun 20s  infinite linear;
}
.tag{
  position: absolute;
  color: white;
  /* border:1px white solid; */
  width: 130%;
  height: 60rpx;
  line-height: 30rpx;
  font-size:25rpx;
  left:-15%;
  text-align: center;
  white-space:pre-wrap;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
@keyframes sun{
  0%{
    transform:translateX(0vw);
    opacity: 0;
  }
  10%{
    transform:translateX(-10vw);
    opacity:1;
  }
  90%{
    transform:translateX(-90vw);
    opacity:1;
  }
  100%{
    transform:translateX(-100vw);
    opacity: 0;
  }
}

