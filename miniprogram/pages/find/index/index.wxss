/* pages/index/index.wxss */
.page-box {
  height: 100%;
}
/* swiper */
.top-box {
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
  background: #f7f7f7;
  padding-left: 10rpx;
}
.top-local{
  width: 44rpx;
  height: 44rpx;
  display: block;
  float: left;
  margin-top: 20rpx;
}
.top-text {
  float: left;
  line-height: 88rpx;
  margin-left: 12rpx;
}
.top-notify{
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 14rpx;
  border-radius: 8rpx;
  float: left;
  color: #ff6428;
  margin-left: 52rpx;
  overflow: hidden;
  padding-left: 60rpx;
  background: #fff url(http://welfare.img.shanshizhe.cn/icon5.png) 18rpx center no-repeat;
  background-size: 28rpx 28rpx;
}
.swiper_item{
  width:100%;
  height:100%;
  position:relative;
  overflow: hidden;
}
.swiper_img{
  width: 102%;
  height: 102%;
  position: absolute;
  left: -2%;
  top: -2%;
}
/* swiper end */

/*  滑块 */
.m-box {
  padding-top: 30rpx;
}
.m-area {
  left: -100vw;
  height: 70vh; 
  width: 200vw; 
  background:rgba(0,0,0,0); 
  z-index: 99;
}
.m-item {
  width: 10px;
  height: 10px;
  position: absolute;
  top: 50%;
  margin-top: -5px;
}
.m-item-box {
  overflow: hidden;
  margin-left: 42rpx;
  width: 666rpx;
  height: 80vh;
  position: absolute;
  top: -333rpx;
  border-radius: 10rpx;
  z-index: 9;
  background: #fff;
  /* padding-top: 76rpx; */
  border-radius: 60rpx;
  box-shadow:5px 9px 10px 0px rgba(0,0,0,0.1);
  border: solid 1px black;
}
.header{
  padding-top: 50rpx;
  display: flex;
  padding-bottom: 50rpx;
  align-items: center;
  border-bottom: 3rpx solid #ccc;
}
.question{
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
}
.image {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  margin: 0 50rpx;
  border-radius: 50%;
}
.item-star{
  width: 100%;
  margin-top: 40rpx;
  text-align: center;
}
