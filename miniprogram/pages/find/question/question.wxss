.question-container{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.question-card{
  position: relative;
  overflow: hidden;
  width: 80vw;
  height: 80vh;
  border-radius: 60rpx;
  box-shadow:5px 9px 10px 0px rgba(0,0,0,0.1);
  border: solid 1px black;
}
.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  /* filter: blur(5px); */
}