.bg{
  width: 100%;
  height:100%;
  /* position: absolute; */
}

.close-icon{
  z-index: 999;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 5%;
  top: 3%;
}
.tag{
  position: absolute;
  left: 5%;
  right: 5%;
  top: 3%;
  mix-blend-mode: difference;
  display: flex;
  align-items: center;
}
.tag-icon{
  height:40rpx;
  width:40rpx;
  margin-right: 10rpx;
}
.container{
  position: absolute;
  width: 93%;
  left: 25rpx;
  top: 80rpx;
}
.title{
  font-size: 32rpx;
  line-height: 60rpx;
  color: #ffffff;
  white-space: pre-wrap;
  word-break: break-all;
}
.content{
  margin-top: 20rpx;
  line-height: 48rpx;
  color: #ffffff;
  font-size: 26rpx;
  white-space: pre-wrap;
  word-break: break-all;
}
.button{
  position: absolute;
  width: 30%;
  height: 50rpx;
  border: 1px solid white;
  color: #fff;
  border-radius: 30rpx;
  bottom:5%;
  line-height: 50rpx;
  text-align: center;
  backdrop-filter:blur(15px);
  background: rgba(255, 255, 255, 0.397);
}

